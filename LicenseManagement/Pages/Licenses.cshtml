@page
@model LicensesModel
@{
    ViewData["Title"] = "License Management";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>License Management</h1>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addLicenseModal">
                <i class="bi bi-plus-circle"></i> Add License
            </button>
        </div>
    </div>

    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.SuccessMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>License Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Licenses != null && Model.Licenses.Any())
                {
                    @foreach (var license in Model.Licenses)
                    {
                        <tr>
                            <td>@license.LicenseID</td>
                            <td>@license.Name</td>
                            <td>
                                <button class="btn btn-sm btn-warning" onclick="editLicense(@license.LicenseID, '@license.Name')">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button class="btn btn-sm btn-danger" onclick="if(confirm('Are you sure?')) { deleteLicense(@license.LicenseID); }">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">No licenses found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Add/Edit License Modal -->
<div class="modal fade" id="addLicenseModal" tabindex="-1" aria-labelledby="licenseModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="licenseModalLabel">Add License</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="SaveLicense">
                <div class="modal-body">
                    <input type="hidden" id="licenseId" name="licenseId" />
                    <div class="mb-3">
                        <label for="licenseName" class="form-label">License Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="licenseName" name="licenseName" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="saveBtn">Save License</button>
                </div>
            </form>
            <form id="deleteForm" method="post" asp-page-handler="DeleteLicense" style="display:none;">
                <input type="hidden" name="licenseId" id="hdnlicenseId" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const modal = new bootstrap.Modal(document.getElementById('addLicenseModal'));

        function editLicense(id, name) {
            document.getElementById('licenseModalLabel').textContent = 'Edit License';
            document.getElementById('licenseId').value = id;
            document.getElementById('licenseName').value = name;
            document.getElementById('saveBtn').textContent = 'Update License';
            modal.show();
        }

        function deleteLicense(id) {
            // const form = document.createElement('form');
            // const input = document.createElement('input');
            // input.type = 'hidden';
            // input.name = 'licenseId';
            // input.value = id;
            // form.method = 'POST';
            // form.action ='?handler=DeleteLicense';
            // form.appendChild(input);
            // document.body.appendChild(form);
            // form.submit();
            document.getElementById('hdnlicenseId').value = id;
            document.getElementById('deleteForm').submit();
        }

        document.getElementById('addLicenseModal').addEventListener('hidden.bs.modal', function () {
            document.getElementById('licenseModalLabel').textContent = 'Add License';
            document.getElementById('licenseId').value = '';
            document.getElementById('licenseName').value = '';
            document.getElementById('saveBtn').textContent = 'Save License';
        });

        document.getElementById('addLicenseModal').addEventListener('hidden.bs.modal', function () {
            location.reload();
        });
    </script>
}